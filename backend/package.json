{
  "name": "han-ngu-hub-backend",
  "version": "1.0.0",
  "description": "Backend API cho Hán Ngữ Hub - Ứng dụng học tiếng Trung",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "setup-db": "ts-node src/scripts/setup-db.ts",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "ts-node prisma/seed.ts",
    "db:setup": "prisma generate && prisma db push && npm run db:seed",
    "db:add-vietnamese": "ts-node scripts/add-vietnamese.ts",
    "db:export-words": "ts-node scripts/export-words-for-translation.ts",
    "db:import-vietnamese": "ts-node scripts/import-vietnamese-from-json.ts",
    "db:translate-gemini": "ts-node scripts/translate-with-gemini.ts",
    "db:list-gemini-models": "ts-node scripts/list-gemini-models.ts"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "chinese",
    "learning",
    "hanzi",
    "flashcards",
    "srs"
  ],
  "author": "Hán Ngữ Hub Team",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "@prisma/client": "^5.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
